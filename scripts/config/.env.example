# Default deployment configuration
# Copy this file to .env and customize for your environment

# Network selection: testnet, mainnet, local
NETWORK=testnet

# Stellar account configuration
# For testnet, you can generate a new account using: stellar keys generate --global <name> --network testnet
STELLAR_SECRET_KEY=
STELLAR_PUBLIC_KEY=

# Admin account for contract initialization (defaults to STELLAR_PUBLIC_KEY if not set)
ADMIN_ADDRESS=

# Token contract address for escrow contracts (XLM native asset by default)
TOKEN_ADDRESS=CDLZFC3SYJYDZT7K67VZ75HPJVIEUVNIXF47ZG2FB2RMQQVU2HHGCYSC

# Deployment settings
CONFIRM_DEPLOY=true
DRY_RUN=false
VERBOSE=true

# Gas settings
GAS_FEE_MULTIPLIER=1.0
RESOURCE_FEE_MULTIPLIER=1.1

# Verification settings
VERIFY_AFTER_DEPLOY=true
VERIFICATION_RETRIES=3
VERIFICATION_DELAY_SECONDS=5

# Rollback settings
KEEP_BACKUP_COUNT=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=deployments/deployment.log
